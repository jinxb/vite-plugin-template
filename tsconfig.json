{
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["ESNext", "DOM", "ES2020"],
    "sourceMap": false,
    "noEmitOnError": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "plugin/*.ts",
    "plugin/**/*.ts",
    "scripts/*.ts",
    "runtime/*.ts",
    "shared/*.ts"
  ],
  "exclude": ["node_modules", "examples", "dist"]
}
